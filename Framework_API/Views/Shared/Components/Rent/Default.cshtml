@model Framework_API.Models.Book


<div class="jumbotron">
    <div class="row">
        <div class="col-6">
            <img src="@Url.Content(Model.Photo)" height="300" width="300" />
        </div>

        <div class="col-6">
            <div class="col-4">
                <h3 class="titulo row"><strong>Author : </strong>@Model.AuthorFullName</h3>
            </div>
            <div class="col-4">
                <h3 class="titulo row"><strong>Title : </strong>@Model.Title</h3>
            </div>            
        </div>
    </div>
</div>
