@model Framework_API.ViewModels.RentViewModel
@{
    ViewData["Title"] = "Book Rental";
}

@await Component.InvokeAsync("Rent", Model.BookId)

<div class="border border-light rounded shadow col-md-8">
    <div class="container">
        <h3 class="title"><i class="fas fa-car fa-lg"></i>Book rental</h3>
        <hr />
        @if (TempData["Warning"] != null)
        {
            <p class="alert alert-warning">@TempData["Warning"].ToString()</p>
        }
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Rent">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="BookId" type="hidden" />

                    <div class="fields">
                        <div class="form-group">
                            <label asp-for="StartDate" class="control-label"></label>
                            <input asp-for="StartDate" type="date" class="form-control form-control-lg" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="fields">
                        <div class="form-group">
                            <label asp-for="EndDate" class="control-label"></label>
                            <input asp-for="EndDate" type="date" class="form-control form-control-lg" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group buttoms">
                        <input type="submit" value="Save" class="btn btn-outline-success btn-lg" /> &nbsp;
                        <a asp-action="Index" class="btn btn-link btn-lg">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
